{
	"name": "@edgefirst-dev/starter-worker",
	"description": "A starter template for Edge-first applications",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=20"
	},
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"start": "wrangler dev",
		"typecheck": "tsc",
		"quality": "biome check .",
		"quality:fix": "biome check . --write --unsafe",
		"predb:migrate:local": "drizzle-kit generate --config drizzle.config.ts",
		"db:migrate:local": "npm run db:migrate -- --local",
		"postdb:migrate:local": "npm run quality:fix",
		"db:migrate": "wrangler d1 migrations apply"
	},
	"dependencies": {
		"@edgefirst-dev/api-client": "^0.0.1",
		"@edgefirst-dev/core": "0.0.30",
		"@edgefirst-dev/data": "^0.0.2",
		"@edgefirst-dev/email": "^0.0.1",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.35.1",
		"inflected": "^2.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "4.20241011.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/bcryptjs": "^2.4.6",
		"@types/bun": "^1.1.11",
		"@types/inflected": "^2.1.3",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.26.2",
		"msw": "^2.4.11",
		"typescript": "^5.6.3",
		"wrangler": "^3.81.0"
	}
}
